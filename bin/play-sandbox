#!/usr/bin/env bash

# shellcheck disable=2154

version=0.0.9

source "${ROOT:-$PWD}/.bpan/run-or-docker.bash"

RUN_OR_DOCKER_PULL=true

check() (
  force
)

dockerfile() (
  cp bin/play-sandbox.py "$build/play-sandbox"
  chmod +x "$build/play-sandbox"

  echo "\
FROM yamlio/yaml-test-runtimes:0.0.2

RUN sed -i -e 's/v3\.10/v3.12/g' /etc/apk/repositories

RUN apk update

RUN apk add \
        bash \
        build-base \
        cargo=1.44.0-r0 \
        curl \
        git \
        libffi-dev \
        m4 \
        musl-dev \
        openssl-dev \
        perl \
        perl-app-cpanminus \
        perl-dev \
        py3-pip \
        python3 \
        python3-dev \
        vim \
        wget \
 && true

RUN apk upgrade musl

RUN pip3 install wheel

RUN pip3 install \
        flask \
        flask-cors \
        pyopenssl \
        pyyaml \
 && true

# This hack is to keep the Haskell reference parser working:
RUN cd /usr/lib \
 && ln -s libffi.so.7.1.0 libffi.so.6 \
 && true

COPY ./play-sandbox /bin/

ENTRYPOINT [\"play-sandbox\"]

"
)

run "$@"
